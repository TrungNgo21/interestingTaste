<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemGeneral"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/foodImgContainer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="1dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/foodImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="#DDDDDD" />
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/foodInfo"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_below="@+id/foodImgContainer"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="73dp"
            android:background="#DDDDDD"
            android:text="Don Chicken"
            android:textColor="@color/shimmer"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="49dp"
            android:layout_height="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="74dp"
            android:background="@color/shimmer"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/foodRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="6.5"
                android:textColor="@color/shimmer"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/startRating"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:scaleType="centerCrop"
                android:background="@color/shimmer" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/store"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:scaleType="fitXY"
                android:background="@color/shimmer" />

            <TextView
                android:id="@+id/storeName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:text="Don Chicken"
                android:background="@color/shimmer"
                android:textColor="@color/shimmer"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/marker"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:scaleType="centerCrop"
                android:background="@color/shimmer" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:background="@color/shimmer"
                android:textColor="@color/shimmer"
                android:text="702 Đ. Nguyễn Văn Linh, Tân Hưng, Quận 7, Hồ Chí Minh"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>